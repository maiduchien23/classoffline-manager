<link rel="stylesheet" href="/assets/css/richtext.min.css" />

<form action="/admin/classes/exercises/add/<%= classVal.id %>" method="POST">
  <div class="form-group">
    <label for="title">Nhập tiêu đề bài tập:</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Nhập tiêu đề bài tập"
    />
  </div>
  <div class="form-group">
    <label for="content">Nhập nội dung bài tập:</label>
    <textarea
      class="form-control"
      id="content"
      type="text"
      name="content"
      placeholder="Nhập nội dung bài tập"
    >
    </textarea>
  </div>
  <div class="form-group">
    <label for="attachment">Link đính kèm:</label>
    <input
      class="form-control"
      id="attachment"
      type="text"
      name="attachment"
      placeholder="Link đính kèm"
    />
  </div>

  <button class="btn btn-success">Thêm bài tập</button>
</form>

<script type="text/javascript" src="/assets/ckeditor/ckeditor.js"></script>
<script>
  // Check if CKEditor is loaded
  if (typeof CKEDITOR !== "undefined") {
    CKEDITOR.replace("content", {
      autoParagraph: false,
      enterMode: CKEDITOR.ENTER_BR,
      shiftEnterMode: CKEDITOR.ENTER_P,
    });
  } else {
    console.error("CKEditor is not loaded.");
  }
</script>
