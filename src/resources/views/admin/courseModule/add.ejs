<div class="card card-primary">
  <form action="/admin/course-modules/add" method="post">
    <div class="card-body">
      <div class="form-group">
        <label for="">Tiêu đề tài liệu:</label>
        <input type="text" class="form-control" name="moduleName" placeholder="Nhập tiêu đề tài liệu" />
      </div>
      <div class="form-group">
        <label for="">Khóa học:</label>
        <select class="form-control" name="courseId">
          <option value="">Chọn khóa học</option>
          <% courses.forEach((course) => {%>
          <option value="<%= course.id %>" <%= course.id === +courseId[0] ? "selected" : "" %>><%= course.name %> </option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">
        Thêm tài liệu
      </button>
    </div>
  </form>
</div>